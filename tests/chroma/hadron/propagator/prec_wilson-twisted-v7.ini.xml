</annotation>
<Param> 
  <InlineMeasurements>
    <elem>
      <Name>POLYAKOV_LOOP</Name>
      <Frequency>1</Frequency>
    </elem>

    <elem>
      <Name>MAKE_SOURCE</Name>
      <Frequency>1</Frequency>
      <Param>
        <version>5</version>
        <wave_state>S_WAVE</wave_state>
        <source_type>POINT_SOURCE</source_type>
        <j_decay>3</j_decay>
        <direction>2</direction>
        <t_source>0 0 0 0</t_source>

        <nrow>4 4 4 8</nrow>
      </Param>
      <NamedObject>
        <source_id>pt_source_0</source_id>
      </NamedObject>
    </elem>

    <elem>
      <Name>PROPAGATOR</Name>
      <Frequency>1</Frequency>
      <Param>
        <version>8</version>
        <nonRelProp>false</nonRelProp>
        <obsvP>false</obsvP>
        <FermionAction>
         <FermAct>WILSON</FermAct>
	 <N5>6</N5>
         <Kappa>0.1</Kappa>
	 <OverMass>1.4</OverMass>
         <FermionBC>
           <FermBC>TWISTED_FERMBC</FermBC>
	   <boundary>1 1 1 1</boundary>
           <phases_by_pi>0.2 0.4 0</phases_by_pi>
	   <phases_dir>0 1 2</phases_dir>
         </FermionBC>
        </FermionAction>
        <InvertParam>
          <invType>CG_INVERTER</invType>
          <RsdCG>1.0e-7</RsdCG>
          <MaxCG>1000</MaxCG>
        </InvertParam>
        <nrow>4 4 4 8</nrow>
      </Param>
      <NamedObject>
        <source_id>pt_source_0</source_id>
        <prop_id>pt_prop_0</prop_id>
      </NamedObject>
    </elem>

    <elem>
      <Name>QIO_WRITE_NAMED_OBJECT</Name>
      <Frequency>1</Frequency>
      <NamedObject>
        <object_id>pt_prop_0</object_id>
        <object_type>LatticePropagator</object_type>
      </NamedObject>
      <File>
        <file_name>./pt_prop_0</file_name>
        <file_volfmt>MULTIFILE</file_volfmt>
      </File>
    </elem>

  </InlineMeasurements>
   <nrow>4 4 4 8</nrow>
</Param>

<RNG>
  <Seed>	
    <elem>11</elem>
    <elem>11</elem>
    <elem>11</elem>
    <elem>0</elem>
  </Seed>
</RNG>

<Cfg>
 <cfg_type>UNIT</cfg_type>
 <cfg_file>../test_purgaug.cfg1</cfg_file>
</Cfg>
