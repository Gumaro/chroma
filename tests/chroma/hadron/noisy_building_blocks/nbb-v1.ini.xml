<?xml version="1.0"?>
<chroma>
  <annotation>
Calculate noisy building blocks - insertions in traces
  </annotation>
  <Param> 
    <InlineMeasurements>

      <elem>
        <Name>MAKE_SOURCE</Name>
        <Frequency>1</Frequency>
        <Param>
          <version>5</version>
          <wave_state>S_WAVE</wave_state>
          <source_type>RAND_Z2_WALL_SOURCE</source_type>
          <j_decay>3</j_decay>
          <direction>2</direction>
          <t_source>0 0 0 0</t_source>
          <nrow>4 4 4 8</nrow>
        </Param>
        <NamedObject>
          <source_id>nsrc_0</source_id>
        </NamedObject>
      </elem>

      <elem>
        <Name>PROPAGATOR</Name>
        <Frequency>1</Frequency>
        <Param>
          <version>8</version>
          <nonRelProp>false</nonRelProp>
          <obsvP>false</obsvP>
          <FermionAction>
            <FermAct>WILSON</FermAct>
            <Kappa>0.11</Kappa>
            <AnisoParam>
              <anisoP>false</anisoP>
              <t_dir>3</t_dir>
              <xi_0>1.0</xi_0>
              <nu>1.0</nu>
            </AnisoParam>
            <FermionBC>
              <FermBC>SIMPLE_FERMBC</FermBC>
              <boundary>1 1 1 0</boundary>
            </FermionBC>
          </FermionAction>
          <InvertParam>
            <invType>CG_INVERTER</invType>
            <RsdCG>1.0e-12</RsdCG>
            <MaxCG>1000</MaxCG>
          </InvertParam>
          <nrow>4 4 4 8</nrow>
        </Param>
        <NamedObject>
          <source_id>nsrc_0</source_id>
          <prop_id>nprop_0</prop_id>
        </NamedObject>
      </elem>

      <elem>
        <annotation>
; NoisyBuildingBlocks input file.
        </annotation>

        <Name>NOISY_BUILDING_BLOCKS</Name>
        <Frequency>1</Frequency>
        <Param>
          <version>3</version>
          <nrow>4 4 4 8</nrow>
          <use_sink_offset>false</use_sink_offset>
          <mom2_max>1</mom2_max>
          <links_max>1</links_max>
          <canonical>false</canonical>
        </Param>
        <BuildingBlocks>
          <OutFileName>nbb.dat_0.out</OutFileName>
          <FrwdPropId>nprop_0</FrwdPropId>
          <NoisySrcId>nsrc_0</NoisySrcId>
          <NoisySrcG5Format>G5_B_G5</NoisySrcG5Format>
          <GammaInsertion>0</GammaInsertion>
          <Flavor>S</Flavor>
          <BBFileNamePattern>S_1_qz%c%1d_qy%c%1d_qx%c%1d.nbb.0</BBFileNamePattern>
        </BuildingBlocks>
        <xml_file>nbb.dat_0.xml</xml_file>
      </elem>

      <elem>
        <Name>ERASE_NAMED_OBJECT</Name>
        <Frequency>1</Frequency>
        <NamedObject>
          <object_id>nsrc_0</object_id>
        </NamedObject>
      </elem>

      <elem>
        <Name>ERASE_NAMED_OBJECT</Name>
        <Frequency>1</Frequency>
        <NamedObject>
          <object_id>nprop_0</object_id>
        </NamedObject>
      </elem>

      <elem>
        <Name>MAKE_SOURCE</Name>
        <Frequency>1</Frequency>
        <Param>
          <version>5</version>
          <wave_state>S_WAVE</wave_state>
          <source_type>RAND_Z2_WALL_SOURCE</source_type>
          <j_decay>3</j_decay>
          <direction>2</direction>
          <t_source>0 0 0 0</t_source>
          <nrow>4 4 4 8</nrow>
        </Param>
        <NamedObject>
          <source_id>nsrc_1</source_id>
        </NamedObject>
      </elem>

      <elem>
        <Name>PROPAGATOR</Name>
        <Frequency>1</Frequency>
        <Param>
          <version>8</version>
          <nonRelProp>false</nonRelProp>
          <obsvP>false</obsvP>
          <FermionAction>
            <FermAct>WILSON</FermAct>
            <Kappa>0.11</Kappa>
            <AnisoParam>
              <anisoP>false</anisoP>
              <t_dir>3</t_dir>
              <xi_0>1.0</xi_0>
              <nu>1.0</nu>
            </AnisoParam>
            <FermionBC>
              <FermBC>SIMPLE_FERMBC</FermBC>
              <boundary>1 1 1 0</boundary>
            </FermionBC>
          </FermionAction>
          <InvertParam>
            <invType>CG_INVERTER</invType>
            <RsdCG>1.0e-12</RsdCG>
            <MaxCG>1000</MaxCG>
          </InvertParam>
          <nrow>4 4 4 8</nrow>
        </Param>
        <NamedObject>
          <source_id>nsrc_1</source_id>
          <prop_id>nprop_1</prop_id>
        </NamedObject>
      </elem>

      <elem>
        <annotation>
; NoisyBuildingBlocks input file.
        </annotation>

        <Name>NOISY_BUILDING_BLOCKS</Name>
        <Frequency>1</Frequency>
        <Param>
          <version>3</version>
          <nrow>4 4 4 8</nrow>
          <use_sink_offset>false</use_sink_offset>
          <mom2_max>1</mom2_max>
          <links_max>1</links_max>
          <canonical>false</canonical>
        </Param>
        <BuildingBlocks>
          <OutFileName>nbb.dat_1.out</OutFileName>
          <FrwdPropId>nprop_1</FrwdPropId>
          <NoisySrcId>nsrc_1</NoisySrcId>
          <NoisySrcG5Format>G5_B_G5</NoisySrcG5Format>
          <GammaInsertion>0</GammaInsertion>
          <Flavor>S</Flavor>
          <BBFileNamePattern>S_1_qz%c%1d_qy%c%1d_qx%c%1d.nbb.1</BBFileNamePattern>
        </BuildingBlocks>
        <xml_file>nbb.dat_1.xml</xml_file>
      </elem>

      <elem>
        <Name>ERASE_NAMED_OBJECT</Name>
        <Frequency>1</Frequency>
        <NamedObject>
          <object_id>nsrc_1</object_id>
        </NamedObject>
      </elem>

      <elem>
        <Name>ERASE_NAMED_OBJECT</Name>
        <Frequency>1</Frequency>
        <NamedObject>
          <object_id>nprop_1</object_id>
        </NamedObject>
      </elem>

    </InlineMeasurements>
    <nrow>4 4 4 8</nrow>
  </Param>

  <RNG>
    <Seed>	
      <elem>11</elem>
      <elem>13</elem>
      <elem>17</elem>
      <elem>19</elem>
    </Seed>
  </RNG>

  <Cfg>
    <cfg_type>SZIN</cfg_type>
    <cfg_file>../../../test_purgaug.cfg1</cfg_file>
  </Cfg>
</chroma>
