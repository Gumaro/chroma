<?xml version="1.0"?>
<chroma>
<annotation>
Hadron spectrum input
</annotation>
<Param> 
  <InlineMeasurements>

    <elem>
      <Name>APPLY_FERM_STATE</Name>
      <Frequency>1</Frequency>
      <Param>
        <version>1</version>
        <FermState>
           <Name>SIMPLE_FERM_STATE</Name>
           <FermionBC>
             <FermBC>SCHROEDINGER_NONPERT_FERMBC</FermBC>
             <SchrPhiMult>1.0</SchrPhiMult>
             <loop_extent>1</loop_extent>
             <decay_dir>3</decay_dir>
             <theta>0 0 0</theta>
           </FermionBC>
        </FermState>
      </Param>
      <NamedObject>
        <gauge_id>default_gauge_field</gauge_id>
        <output_id>sf_gauge_field</output_id>
      </NamedObject>
    </elem>

    <elem>
      <Name>MAKE_SOURCE</Name>
      <Frequency>1</Frequency>
      <Param>
        <version>6</version>
        <Source>
          <version>1</version>
          <SourceType>SF_WALL_SOURCE</SourceType>
          <j_decay>3</j_decay>
          <t_srce>0 0 0 0</t_srce>
          <t_source>0</t_source>
          <direction>PLUS</direction>

          <FermionBC>
            <FermBC>SCHROEDINGER_NONPERT_FERMBC</FermBC>
            <SchrPhiMult>1.0</SchrPhiMult>
            <decay_dir>3</decay_dir>
            <loop_extent>1</loop_extent>
            <theta>0 0 0</theta>
          </FermionBC>

          <SmearingParam>
            <wvf_kind>GAUGE_INV_GAUSSIAN</wvf_kind>
            <wvf_param>2.0</wvf_param>
            <wvfIntPar>5</wvfIntPar>
            <no_smear_dir>3</no_smear_dir>
          </SmearingParam>
        </Source>
      </Param>
      <NamedObject>
        <gauge_id>sf_gauge_field</gauge_id>
        <source_id>sh_source_1</source_id>
      </NamedObject>
    </elem>

    <elem>
      <Name>PROPAGATOR</Name>
      <Frequency>1</Frequency>
      <Param>
        <version>10</version>
        <quarkSpinType>FULL</quarkSpinType>
        <obsvP>false</obsvP>
        <numRetries>1</numRetries>
        <FermionAction>
          <FermAct>CLOVER</FermAct>
          <Mass>0.01</Mass>
          <clovCoeff>1.17</clovCoeff>
          <AnisoParam>
            <anisoP>false</anisoP>
            <t_dir>3</t_dir>
            <xi_0>1.0</xi_0>
            <nu>1.0</nu>
          </AnisoParam>
          <FermState>
            <Name>SIMPLE_FERM_STATE</Name>
            <FermionBC>
              <FermBC>SCHROEDINGER_NONPERT_FERMBC</FermBC>
              <SchrPhiMult>1.0</SchrPhiMult>
              <decay_dir>3</decay_dir>
              <loop_extent>1</loop_extent>
              <theta>0 0 0</theta>
            </FermionBC>
          </FermState>
        </FermionAction>
        <InvertParam>
          <invType>CG_INVERTER</invType>
          <RsdCG>1.0e-12</RsdCG>
          <MaxCG>1000</MaxCG>
        </InvertParam>
      </Param>
      <NamedObject>
        <gauge_id>sf_gauge_field</gauge_id>
        <source_id>sh_source_1</source_id>
        <prop_id>sh_prop_1</prop_id>
      </NamedObject>
    </elem>

    <elem>
      <Name>SINK_SMEAR</Name>
      <Frequency>1</Frequency>
      <Param>
        <version>5</version>
        <Sink>
          <version>2</version>
          <SinkType>POINT_SINK</SinkType>
          <j_decay>3</j_decay>

          <Displacement>
            <version>1</version>
            <DisplacementType>NONE</DisplacementType>
          </Displacement>

          <LinkSmearing>
            <LinkSmearingType>APE_SMEAR</LinkSmearingType>
            <link_smear_fact>2.5</link_smear_fact>
            <link_smear_num>1</link_smear_num>
            <no_smear_dir>3</no_smear_dir>
          </LinkSmearing>
        </Sink>
      </Param>
      <NamedObject>
        <gauge_id>sf_gauge_field</gauge_id>
        <prop_id>sh_prop_1</prop_id>
        <smeared_prop_id>sh_pt_sink_1</smeared_prop_id>
      </NamedObject>
    </elem>

    <elem>
      <Name>SINK_SMEAR</Name>
      <Frequency>1</Frequency>
      <Param>
        <version>5</version>
        <Sink>
          <version>2</version>
          <SinkType>SHELL_SINK</SinkType>
          <j_decay>3</j_decay>

          <Displacement>
            <version>1</version>
            <DisplacementType>NONE</DisplacementType>
          </Displacement>

          <SmearingParam>
            <wvf_kind>GAUGE_INV_GAUSSIAN</wvf_kind>
            <wvf_param>2.0</wvf_param>
            <wvfIntPar>5</wvfIntPar>
            <no_smear_dir>3</no_smear_dir>
          </SmearingParam>

          <LinkSmearing>
            <LinkSmearingType>APE_SMEAR</LinkSmearingType>
            <link_smear_fact>2.5</link_smear_fact>
            <link_smear_num>1</link_smear_num>
            <no_smear_dir>3</no_smear_dir>
          </LinkSmearing>
        </Sink>
      </Param>
      <NamedObject>
        <gauge_id>sf_gauge_field</gauge_id>
        <prop_id>sh_prop_1</prop_id>
        <smeared_prop_id>sh_sh_sink_1</smeared_prop_id>
      </NamedObject>
    </elem>

    <elem>
      <annotation>
         Compute the hadron spectrum. 
         This version is a clone of the one below, however the xml output is
         written within the same chroma output file
      </annotation>
      <Name>HADRON_SPECTRUM</Name>
      <Frequency>1</Frequency>
      <Param>
        <version>1</version>
        <MesonP>true</MesonP>
        <CurrentP>true</CurrentP>
        <BaryonP>false</BaryonP>
        <time_rev>false</time_rev>
        <mom2_max>0</mom2_max>
        <avg_equiv_mom>true</avg_equiv_mom>
       </Param>
      <NamedObject>
        <gauge_id>sf_gauge_field</gauge_id>
        <sink_pairs>
          <elem>
            <first_id>sh_pt_sink_1</first_id>
            <second_id>sh_pt_sink_1</second_id>
          </elem>
<annotation>
          <elem>
            <first_id>sh_sh_sink_1</first_id>
            <second_id>sh_sh_sink_1</second_id>
          </elem>
</annotation>
        </sink_pairs>
      </NamedObject>
      <!--  
The USER should write to a separate file. However, for the
regression test spectrum output is kept within the chroma xml output
         <xml_file>hadspec.dat.xml</xml_file>
	-->
    </elem>

    <elem>
      <annotation>
         Compute the hadron spectrum. 
         This version is a clone of the one above; however, the xml output is
         written to a separate output file
      </annotation>
      <Name>HADRON_SPECTRUM</Name>
      <Frequency>1</Frequency>
      <Param>
        <version>1</version>
        <MesonP>true</MesonP>
        <CurrentP>true</CurrentP>
        <BaryonP>false</BaryonP>
        <time_rev>false</time_rev>
        <mom2_max>3</mom2_max>
        <avg_equiv_mom>true</avg_equiv_mom>
       </Param>
      <NamedObject>
        <gauge_id>sf_gauge_field</gauge_id>
        <sink_pairs>
          <elem>
            <first_id>sh_pt_sink_1</first_id>
            <second_id>sh_pt_sink_1</second_id>
          </elem>
<annotation>
          <elem>
            <first_id>sh_sh_sink_1</first_id>
            <second_id>sh_sh_sink_1</second_id>
          </elem>
</annotation>
        </sink_pairs>
      </NamedObject>
      <xml_file>hadspec.dat.xml</xml_file>
    </elem>

  </InlineMeasurements>
   <nrow>4 4 4 8</nrow>
</Param>

<RNG>
  <Seed>	
    <elem>11</elem>
    <elem>11</elem>
    <elem>11</elem>
    <elem>0</elem>
  </Seed>
</RNG>

<Cfg>
 <cfg_type>CLASSICAL_SF</cfg_type>
 <GaugeState>
   <Name>SIMPLE_GAUGE_STATE</Name>
   <GaugeBC>
     <Name>SCHROEDINGER_NONPERT_GAUGEBC</Name>
     <SchrPhiMult>1.0</SchrPhiMult>
     <decay_dir>3</decay_dir>
     <loop_extent>1</loop_extent>
   </GaugeBC>
 </GaugeState>
</Cfg>
</chroma>


