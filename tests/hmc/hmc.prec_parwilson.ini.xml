<?xml version="1.0"?>
<Params> 
  <MCControl>

    <Cfg>
      <cfg_type>DISORDERED</cfg_type>
      <cfg_file>DUMMY</cfg_file>
    </Cfg>

    <RNG>
      <Seed>	
        <elem>11</elem>
        <elem>0 </elem>
        <elem>0 </elem>
        <elem>0 </elem>
      </Seed>
    </RNG>

    <StartUpdateNum>500</StartUpdateNum>
    <NWarmUpUpdates>500</NWarmUpUpdates>  
    <NProductionUpdates>10000</NProductionUpdates>
    <NUpdatesThisRun>10000</NUpdatesThisRun>
    <SaveInterval>500</SaveInterval>
    <SavePrefix>dummy_run</SavePrefix>
    <SaveVolfmt>SINGLEFILE</SaveVolfmt>

    <InlineMeasurements>
      <elem>
          <Name>POLYAKOV_LOOP</Name>
	  <Frequency>1</Frequency>
      </elem>
    </InlineMeasurements>
  </MCControl>

  <HMCTrj>
   <MC_Hamiltonian>
    <Monomials>
      <elem>
	<Name>TWO_FLAVOR_PARWILSON_FERM_MONOMIAL</Name>
        <InvertParam>
          <invType>CG_INVERTER</invType>
          <RsdCG>1.0e-8</RsdCG>
          <MaxCG>1000</MaxCG>
        </InvertParam>
        <FermionAction>
          <FermAct>PARWILSON</FermAct>
          <Kappa>0.177</Kappa>
          <H> 0.8 </H>
	  <FermionBC>
            <FermBC>SIMPLE_FERMBC</FermBC>
            <boundary>1 1 1 -1</boundary>
	  </FermionBC>
        </FermionAction>
        <ChronologicalPredictor>
          <Name>LAST_SOLUTION_4D_PREDICTOR</Name>
        </ChronologicalPredictor>
      </elem>
      <elem>
	<Name>TWO_FLAVOR_PARWILSON_HASENBUSCH_FERM_MONOMIAL</Name>
	<InvertParam>
          <invType>CG_INVERTER</invType>
          <RsdCG>1.0e-8</RsdCG>
          <MaxCG>1000</MaxCG>
        </InvertParam>
        <FermionAction>
          <FermAct>PARWILSON</FermAct>
	  <Kappa>0.11</Kappa>
	  <H>0.5</H>
          <!--AnisoParam>
            <anisoP>true</anisoP>
            <t_dir>3</t_dir>
            <xi_0>2.464</xi_0>
            <nu>0.95</nu>
          </AnisoParam-->
          <FermionBC>
            <FermBC>SIMPLE_FERMBC</FermBC>
            <boundary>1 1 1 -1</boundary>
          </FermionBC>
        </FermionAction>
        <FermionActionPrec>
          <FermAct>PARWILSON</FermAct>
          <Kappa>0.11</Kappa>
          <H>0.8</H>
          <!--AnisoParam>
            <anisoP>true</anisoP>
            <t_dir>3</t_dir>
            <xi_0>2.464</xi_0>
            <nu>0.95</nu>
          </AnisoParam-->
          <FermionBC>
            <FermBC>SIMPLE_FERMBC</FermBC>
            <boundary>1 1 1 -1</boundary>
          </FermionBC>
        </FermionActionPrec>
      </elem>
      <elem>
	<Name>WILSON_GAUGEACT_MONOMIAL</Name>
	<GaugeAction>
	   <Name>WILSON_GAUGEACT</Name>
	   <beta>6.0</beta>
	   <GaugeBC>
		<Name>PERIODIC_GAUGEBC</Name>
           </GaugeBC>
        </GaugeAction>
      </elem>
    </Monomials>
   </MC_Hamiltonian>
   <MDIntegrator>
      <Name>LCM_MINIMUM_NORM_2ND_ORDER_INTEGRATOR_MTS</Name>
      <tau>0.5</tau>
      <number_of_timescales>3</number_of_timescales>
      <monomial_list>
        <elem>2</elem>
        <elem>1</elem>
        <elem>0</elem>
      </monomial_list>
      <n_steps_list>3 2 4</n_steps_list>
      <lambda_list>0.19 0.19 0.19</lambda_list>
   </MDIntegrator>
   <nrow>4 4 4 4</nrow>
 </HMCTrj>

</Params>


